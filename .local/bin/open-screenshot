#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

interactive=$1
case $XDG_SESSION_TYPE in
    'wayland')
        case "$interactive" in
            1) slurp | grim -g - "$HOME/"$(date '+%F_%T').png;;
            0) grim "$HOME/"$(date '+%F_%T').png;;
        esac;;
    *)
        case "$interactive" in
            1) flameshot gui  --path $HOME;;
            0) flameshot full --path $HOME;;
        esac;;
esac
