{
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.formatOnSaveFiletypes": [
        "json"
    ],
    "diagnostic.enable": true,
	"diagnostic.errorSign": "\uf467",
	"diagnostic.warningSign": "\uf071",
	"diagnostic.infoSign": "\uf129",
	"diagnostic.hintSign": "\uf864",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": " ❯❯❯ ",
    "diagnostic.enableMessage": "never",
    "diagnostic.messageTarget": "echo",
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        "R": {
            "enable": true,
            "command": "/usr/bin/R",
            "args": [
                "--slave",
                "-e",
                "languageserver::run()"
            ],
            "filetypes": [
                "r"
            ]
        },
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    },
    "git.enableGutters": true,
    "git.changedSign.hlGroup": "None",
    "git.removedSign.hlGroup": "None",
    "git.addedSign.hlGroup": "None",
    "git.topRemovedSign.hlGroup": "None",
    "git.changeRemovedSign.hlGroup": "None",
    "git.conflict.incoming.hlGroup": "None",
    "git.conflict.current.hlGroup": "None",
    "python.formatting.provider": "black",
    "snippets.ultisnips.directories": [
        "$HOME/.config/nvim/ultisnips"
    ]
}
