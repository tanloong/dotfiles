        #format_up = "W: (%quality at %essid) %ip"
        format_up = "%ip"
        format_down = "W: down"
		align = "center"
		separator_block_width = 20
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
		align = "center"
		separator_block_width = 20
}

