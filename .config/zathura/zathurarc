# website: https://pwmt.org/projects/zathura/documentation/

# define the gap in pixels between rendered pages
    set page-padding 5
# display status bar and vertical scrolling bar
    set guioptions sv
set selection-clipboard clipboard
set sandbox none
set statusbar-basename true
set scroll-step 40
set zoom-step 10
set incremental-search false

map b toggle_statusbar
map r reload
map R rotate
map I recolor
map <C-j> zoom out
map <C-k> zoom in
map - zoom out
map = zoom in
map u scroll half-up
map d scroll half-down
map H scroll full-up
map L scroll full-down
map h scroll left
map l scroll right
map <Left> scroll full-up
map <Right> scroll full-down
map ` mark_evaluate
map D toggle_page_mode
map p print
map <F4> quit

# set statusbar-h-padding 0
# set statusbar-v-padding 0
